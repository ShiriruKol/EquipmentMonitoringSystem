@model EquipmentMonitoringSystem.PresentationLayer.Models.UserEditViewModel
@{
    ViewData["Title"] = "Добавить пользователя";
}

<div class="container">
    <main role="main" class="pb-3">
        <div class="column">
            <h4 class="display-4">Добавить пользователеля</h4>

            <div class="col-8 mb-4">
                <form asp-controller="User" asp-action="Add" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="FullName">ФИО</label>
                        <input asp-for="FullName" class="form-control">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email">Логин</label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password">Пароль</label>
                        <input asp-for="Password" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="RoleId" class="form-label">Роль</label>
                        <select id="SelectedTypeId" asp-for="RoleId" asp-items="Model.Roles" class="form-select">
                            <option disabled>Выберите роль</option>
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>

                    <div class="validation" asp-validation-summary="ModelOnly"></div>

                    <button type="submit" class="btn btn-success">Добавить</button>
                </form>
            </div>

            <a asp-action="Index">Вернуться назад</a>
        </div>
    </main>
</div>