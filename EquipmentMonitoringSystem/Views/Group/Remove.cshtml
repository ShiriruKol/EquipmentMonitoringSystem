@model EquipmentMonitoringSystem.PresentationLayer.Models.GroupModel

@{
    ViewData["Title"] = "Удалить станцию";
    Layout = null;
}

<b>Вы уверены, что хотите удалить эту группу?</b>
<div class="mt-2">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Имя</th>
                <th scope="col">Кол-во оборудований</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Group.Name</td>
                <td>@Model.EqCount</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-2">
        <form asp-action="Remove">
            <input type="hidden" asp-for="Group.Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary">Назад к списку</a>
        </form>
    </div>

</div>