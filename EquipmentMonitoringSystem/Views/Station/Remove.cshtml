@model EquipmentMonitoringSystem.PresentationLayer.Models.StationIndexViewModel

@{
    ViewData["Title"] = "Удалить станцию";
    Layout = null;
}

<b>Вы уверены, что хотите удалить эту станцию?</b>
<div class="mt-2">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Имя</th>
                <th scope="col">Кол-во групп</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Station.Name</td>
                <td>@Model.NumberGroups</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-2">
        <form asp-action="Remove">
            <input type="hidden" asp-for="Station.Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" /> 
            <a asp-action="Index" class="btn btn-primary">Назад к списку</a>
        </form>
    </div>
    
</div>