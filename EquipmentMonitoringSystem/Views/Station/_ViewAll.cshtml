@model List<EquipmentMonitoringSystem.PresentationLayer.Models.StationIndexViewModel>


<div class="container">
    <main role="main" class="pb-3">
        <div class="action-area">
            <h4>Добавить новую станцию </h4>
            <a class="btn btn-success action-icon" onclick="showInPopup('@Url.Action("Add", "Station", null, Context.Request.Scheme)', 'Новая Станция')" title="Нажмите, чтобы добавить.">
                <i class="fa-sharp fa-solid fa-plus"></i>
            </a>
        </div>

        <input class="form-control" type="text" placeholder="Поиск по таблице" id="search-text" onkeyup="tableSearch()">
        <p><button class="btn btn-success mt-1" onclick="sortTable()">Отсортировать таблицу по алфавиту</button></p>
        <table class="table table-bordered mt-1" id="info-table">
            <thead>
                <tr style="cursor: pointer;">
                    <th scope="col" data-type="number">№</th>
                    <th scope="col" data-type="string">Имя</th>
                    <th scope="col" data-type="number">Кол-во групп</th>
                    <th scope="col">Действия</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@index</th>
                            <td>@item.Station.Name</td>
                            <td>@item.NumberGroups</td>
                            <td>
                                <div class="action-area">
                                    <a class="btn btn-secondary action-icon" onclick="showInPopup('@Url.Action("Edit", "Station", new {id=item.Station.Id}, Context.Request.Scheme)', 'Изменить Станцию')" title="Нажмите, чтобы добавить.">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a class="btn btn-primary action-icon" href="/Station/Info/@item.Station.Id" title="Нажмите, чтобы узнать подробную информацию.">
                                        <i class="fas fa-info"></i>
                                    </a>
                                    <a class="btn btn-danger action-icon" onclick="showInPopup('@Url.Action("Remove", "Station", new {id=item.Station.Id}, Context.Request.Scheme)', 'Удалить Станцию')" title="Нажмите, чтобы удалить.">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>

    </main>
</div>
