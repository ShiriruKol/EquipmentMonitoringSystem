@using Microsoft.AspNetCore.Identity
@using EquipmentMonitoringSystem.Areas.Identity.Data

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <a class="me-3 nav-link p-2 notification" asp-controller="UpcomingMaintenance" asp-action="IndexNortf">
        <i class="fa-sharp fa-solid fa-bell"></i>
        <span id="nortfid" class="badge"></span>
    </a>
    //Убираем все символы после @
    var name = UserManager.GetUserName(User).ToString().Split("@").First();

    <li class="nav-item">
        <a id="manage" class="nav-link text-light" @*asp-area="Identity" asp-page="/Account/Manage/Index"*@ title="Manage">Профиль @name</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-light">Выйти</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Войти</a>
    </li>
}
</ul>


<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: "/UpcomingMaintenance/CountNortify",
            contextType: "application/json; charset=utf-8",
            dataType: "json",
            success: OnSuccessResult,
            error: OnError
        });

        function OnSuccessResult(data) {
            var _data = data;
            document.getElementById("nortfid").innerHTML = _data;
        }

        function OnError(err) {
            
        }
    });
</script>