@model List<EquipmentMonitoringSystem.PresentationLayer.Models.UnplannedMainView>

<div class="col-12">
    <main role="main" class="pb-3">

        <input class="form-control" type="text" placeholder="Поиск по таблице" id="search-text" onkeyup="tableSearch()">
        <p><button class="btn btn-success mt-1" onclick="sortTable()">Отсортировать таблицу по алфавиту</button></p>


        <table class="table table-bordered mt-1" id="info-table">
            <thead>
                <tr>
                    <th scope="col">Сообщение</th>
                    <th scope="col">Описание</th>
                    <th scope="col">Оборудование</th>
                    <th scope="col">Станция</th>
                    <th scope="col">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Header</td>
                        <td>@item.Description</td>
                        <td>@item.EmplName</td>
                        <td>@item.StatName</td>
                        <td>
                            <a class="btn btn-success action-icon" href="/UpcomingMaintenance/Fix/@item.Id" title="Нажмите, чтобы объявить о прохождении ТО.">
                                <i class="fa-sharp fa-solid fa-check"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</div>