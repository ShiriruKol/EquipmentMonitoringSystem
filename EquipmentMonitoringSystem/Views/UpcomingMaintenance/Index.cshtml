@model List<EquipmentMonitoringSystem.PresentationLayer.Models.UpcomingViewMaintenanceModel>
@{
    ViewData["Title"] = "Список приближающихся ТО";
}

<div class="container">
    <main role="main" class="pb-3">
        <div class="action-area">
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">№</th>
                    <th scope="col">Имя оборудования</th>
                    <th scope="col">Имя ТО</th>
                    <th scope="col">Дата проведения</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@index</th>
                            <td>@item.UpcomingMaintenance.EquipmentName</td>
                            <td>@item.UpcomingMaintenance.MaintenanceName</td>
                            <td>@item.UpcomingMaintenance.DateMaintenance</td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </main>
</div>