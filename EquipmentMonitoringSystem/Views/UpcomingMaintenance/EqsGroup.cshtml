@using EquipmentMonitoringSystem.PresentationLayer.Models;
@model EqupsGroup
@{
    ViewData["Title"] = "Список приближающихся ТО Группы:" + Model.NameGroup;
}

<h4>Группа: @Model.NameGroup</h4>

<h5>Список приближающиеся ТО оборудований</h5>
<table class="table">
    <thead>
        <tr>
            <th scope="col">№</th>
            <th scope="col">Наименование</th>
            <th scope="col">Приближающесся ТО</th>
            <th scope="col">Действие</th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1;}
        @foreach(var eq in Model.Equipments)
        {
            <tr>
                <th scope="row">@i</th>
                <td>@eq.Name</td>
                <td>@eq.MainDateName</td>
                @if(eq.Appointed)
                {
                    <td>
                        Сотрудник назначен
                    </td>
                }
                else
                {
                    <td>
                        <a class="btn btn-success" href="/Report/Appoint/@eq.Id" title="Нажмите, чтобы назначить сотрудника на выполнение ТО.">
                            Назначить сотрудника
                        </a>
                    </td>
                }
                
            </tr>
            i++;
        }
    </tbody>
</table>