@using EquipmentMonitoringSystem.PresentationLayer.Models;
@model IEnumerable<ReportViewModel>
@{
    ViewData["Title"] = "Отчеты";
}

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Наименование</th>
                <th>Тех. обслуживание</th>
                <th>Дата проведения</th>
                <th>Фактическая дата проведения</th>
                <th>Сотрудник</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Main)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    @if (item.DateDefacto == "01.01.0001")
                    {
                        <td>---</td>
                    }
                    else
                    {
                        <td>@Html.DisplayFor(modelItem => item.DateDefacto)</td>
                    }
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>
                        @if(item.Status == "Выполнено")
                        {
                            <div class="btn btn-primary">⠀Пройдено⠀</div>
                        }
                        else
                        {
                            <div class="btn btn-danger">Не пройден</div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h5 class="mt-2 m-lg-2 text-center">Список пуст</h5>
}